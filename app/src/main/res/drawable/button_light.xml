<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/toss_blue_500" android:state_pressed="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/toss_blue_100" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:color="@color/toss_blue_500" android:state_focused="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/toss_blue_100" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:color="@color/toss_blue_500">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/toss_blue_50" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>